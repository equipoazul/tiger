    function printint (i : int) =
      let function f (i : int) =
            if i > 0 
        then (f (i/10); print (chr (i-i/10*10+ord ("0"))))
       in if i < 0 then (print ("-"); f (-i))
          else if i>0 then f (i) 
          else print ("0")
        end 

    function try (c : int) =
     (if c=N
     then print("ACA VA EL TABLERO\n")
     else for r := 0 to N-1 
	   do (if row[r]=0 then
              (row[r] :=1;
		       row[1] := 10;
	           try (c+1))) )

 in try (0); 0
end
